<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/forms_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passport Application"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Supporting subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Please fill the passport application below "
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/labels"
            android:layout_gravity="center_horizontal"/>

        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/blue"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Surname -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- ID Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter ID Number"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender -->
        <Spinner
            android:id="@+id/spGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Gender"/>

        <!-- Province -->
        <Spinner
            android:id="@+id/spProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Province"/>

        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textPostalAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- City -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Postcode -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPostcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postcode"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="phone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Upload Documents "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/labels"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Upload passport photo -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/passport" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your
                    Passport Photo" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadPassportPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- Upload Proof of Address -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/address" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Proof of Address" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadProofOfAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- Upload ID Document -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Identity Document" />
                </LinearLayout>

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/id" />

                <Button
                    android:id="@+id/btnUploadIdDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:text="Upload"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <CheckBox
            android:id="@+id/cbNDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to protect my data by signing an NDA"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/darker_blue"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"/>

        <!-- Date Picker for Date of Birth -->
        <Button
            android:id="@+id/btnPickDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Date of Birth"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/darker_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Application"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/darker_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            />
    </LinearLayout>
</ScrollView>
