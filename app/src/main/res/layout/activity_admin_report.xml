<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.AdminReportActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Reports"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- KPI Section -->
    <TextView
        android:id="@+id/textViewTotalUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Users: "
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textViewActiveUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Users: "
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textViewTotalApplications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Applications: "
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textViewApprovedApplications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approved Applications: "
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textViewRejectedApplications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejected Applications: "
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <!-- Line Chart Section -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp" />
</LinearLayout>
