<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forms_background"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Grants Application"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Surname -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ID Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender">

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- South African Status Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="South African Status">

            <Spinner
                android:id="@+id/spinnerSAStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Residential Information"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- City -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Postal Code -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postal Code">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Passport Type Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Type">

            <Spinner
                android:id="@+id/spinnerPassportType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date of Birth (Calendar) -->
        <Button
            android:id="@+id/btnDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date of Birth"
            android:backgroundTint="@color/darker_blue"
            android:textColor="@color/white"/>

        <!-- Document Uploads Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Required Documents"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- ID Document Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">

            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Identity Document" />
                </LinearLayout>

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/id" />

                <Button
                    android:id="@+id/btnUploadIdDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:text="Upload"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bank Statement Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">

            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Bank
                        Statement" />

                </LinearLayout>

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bank" />

                <Button
                    android:id="@+id/btnUploadBankStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:text="Upload"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Passport Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/passport" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your
                    Passport Photo" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadPassport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- Proof of Income Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/certificate" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Proof of
                        Income" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadProofOfIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Proof of Address Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/address" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Proof of Address" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadProofOfAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Medical Report Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/medical" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Medical
                        Report" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadMedicalReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Marriage/Death Certificate Upload -->
        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="106dp">


            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="91dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="12dp"
                app:cardCornerRadius="@dimen/_12ssp">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:layout_gravity="left|center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/certificate" />

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload your Death or Marriage Certificate" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnUploadMarriageDeathCert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="right|center"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitSocialGrantsApplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAlignment="center"
            android:backgroundTint="@color/darker_blue"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
