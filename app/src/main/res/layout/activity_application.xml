<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/forms_background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Submission"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- Description and Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Description Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Submit your application by describing your request and attaching any necessary documents. Use the form below to complete your submission."
            android:textSize="14sp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <!-- Application Form Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="192dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:padding="12dp"
        app:cardCornerRadius="@dimen/_12ssp">

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="251dp"
            android:orientation="vertical">

            <!-- Application Description Input -->
            <EditText
                android:id="@+id/etApplication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Application Description"
                android:paddingBottom="8dp" />

            <!-- Upload Document Button -->
            <Button
                android:id="@+id/btnUploadDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/blue"
                android:paddingBottom="8dp"
                android:text="Upload Document"
                android:textColor="@android:color/white" />

            <!-- Submit Application Button -->
            <Button
                android:id="@+id/btnSubmitApplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/blue"
                android:text="Submit Application"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
