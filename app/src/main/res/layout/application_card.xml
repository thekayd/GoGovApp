<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textApplicantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textApplicationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- New TextView for detailed information -->
        <TextView
            android:id="@+id/textApplicationDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Additional application details here"
            android:textSize="14sp"
            android:textColor="#555555" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
