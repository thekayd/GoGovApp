<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.HealthFormsActivity"
    android:background="@drawable/ocean">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Department Forms"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- Description and Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Dummy Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="The Health Department offers various services to ensure the well-being of the community. Register for medical aid, vaccination, and more."
            android:textSize="14sp"
            android:paddingEnd="8dp" />

        <!-- Health Department Image -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/coatofarms"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Medical Aid Application Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:padding="12dp"
        app:cardCornerRadius="@dimen/_12ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Medical Aid Application"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Description, centered in the middle space -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="The Medical Aid Application service is designed to assist citizens in accessing essential health care services through affordable medical coverage. By applying for medical aid, individuals can receive financial support for a wide range of health-related expenses, such as hospital visits, medications, specialist consultations, and emergency care."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Button positioned at the bottom of the CardView -->
            <Button
                android:id="@+id/btn_medical_aid_application"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/darker_blue"
                android:text="Medical Aid Application"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vaccination Registration Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:padding="12dp"
        app:cardCornerRadius="@dimen/_12ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Vaccination Registration"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Description, centered in the middle space -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="The Medical Aid Application service is designed to assist citizens in accessing essential health care services through affordable medical coverage. By applying for medical aid, individuals can receive financial support for a wide range of health-related expenses, such as hospital visits, medications, specialist consultations, and emergency care."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Button positioned at the bottom of the CardView -->
            <Button
                android:id="@+id/btn_vaccination_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/darker_blue"
                android:text="Vaccination Registration"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
