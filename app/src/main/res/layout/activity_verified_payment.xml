<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/forms_background">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminateTint="@color/darker_blue"/>

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_checkmark"
        android:visibility="gone"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Processing payment..."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnViewApplications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Applications"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:backgroundTint="@color/darker_blue"/>

    <Button
        android:id="@+id/btnDownloadReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Receipt"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:backgroundTint="@color/darker_blue"/>

    <ImageView
        android:layout_width="119dp"
        android:layout_height="110dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/mascot_v2" />

</LinearLayout>