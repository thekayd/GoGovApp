<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="24dp"
    android:background="@drawable/login_bg"
    android:scrollbars="none"
    tools:context=".activities.SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Adjusted title to match the sign in style -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_64ssp"
                android:text="@string/create_new_account"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <!-- Adjusted image layout to match the style -->
            <FrameLayout
                android:id="@+id/layoutImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <!-- Updated EditTexts to follow the Sign In input style -->
            <EditText
                android:id="@+id/inputName"
                android:layout_width="329dp"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_input"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="329dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_input"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/InputPassword"
                android:layout_width="334dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_input"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/InputConfirmPassword"
                android:layout_width="338dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_input"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="13dp" />

            <!-- Sign up button and progress bar styled similarly to Sign In -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true">

                <ProgressBar
                    android:id="@+id/ProgressBar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/buttonSignUp"
                    android:layout_width="329dp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/darker_blue"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    app:cornerRadius="@dimen/_8ssp" />
            </FrameLayout>

            <!-- Create account link -->
            <TextView
                android:id="@+id/textSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/sign_in"
                android:textColor="@color/primary"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="154dp"
                android:layout_height="@dimen/_100ssp"
                android:layout_gravity="left"
                android:src="@drawable/mascot_v2" />
        </LinearLayout>

    </ScrollView>


